{% extends 'base.html.twig' %}

{% block title %}
    Mon accueil
            
        
    
{% endblock %}

{% block body %}
    <header>
            <div id="header-img"></div>
        <div id="header-text">
            <h1>Développeur web et mobile</h1>
            <h2>Thierry PRUVOST</h2>
        </div>
    </header>

    <main class="p-5">
        <div id="apropos" class="container-fluid py-5">
            <h2>A propos</h2>
            <div class="row">
                <div class="col-sm-12 col-sm-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3 text-justify mt-3">
                {{ aPropos.texte }}
                </div>
            </div>
        </div>
        <div id="realisations" class="container-fluid py-5">
            <h2>Réalisations</h2>
        </div>
        <div id="competences" class="container-fluid py-5">
            <h2>Compétences</h2>
            {# {{ dump(competences) }} #}
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-4 mt-3">
                    <h3>Technologies</h3>
                    <div class="dropdown-divider"></div>{# trait clair sous le titre #}
                    {% for competence in competences %}
                        {% if competence.categorie == 'technologie' %}
                        <p>
                            <img src="{{ asset('img/skills/') ~ competence.img}}" alt="image {{competence.titre}}"> 
                            - {{competence.titre}} 
                        </p>
                        {% endif %}
                    {% endfor %}    
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4 mt-3">
                    <h3>Frameworks / bibliothèques</h3>
                    <div class="dropdown-divider"></div>{# trait clair sous le titre #}
                    {% for competence in competences %}
                        {% if competence.categorie == 'framework' %}
                        <p>
                            <img src="{{ asset('img/skills/') ~ competence.img}}" alt="image {{competence.titre}}"> 
                            - {{competence.titre}} 
                        </p>
                        {% endif %}
                    {% endfor %}
                    {% for competence in competences %}
                        {% if competence.categorie == 'bibliothèque' %}
                        <p>
                            <img src="{{ asset('img/skills/') ~ competence.img}}" alt="image {{competence.titre}}"> 
                            - {{competence.titre}} 
                        </p>
                        {% endif %}
                    {% endfor %}  
                </div>
                <div class="col-sm-12 col-md-6 offset-md-3 col-lg-4 offset-lg-0 mt-3">
                    <h3>CMS</h3>
                    <div class="dropdown-divider"></div>{# trait clair sous le titre #}
                    {% for competence in competences %}
                        {% if competence.categorie == 'CMS' %}
                        <p>
                            <img src="{{ asset('img/skills/') ~ competence.img}}" alt="image {{competence.titre}}"> 
                            - {{competence.titre}} 
                        </p>
                        {% endif %}
                    {% endfor %}    
                </div>
            </div>
        </div>
        <div id="contact" class="container-fluid py-5">
            <h2>Contact</h2>
                <div class="col-sm-12 col-md-8 col-lg-6 offset-lg-6 offset-lg-3 col-xl-4 offset-xl-4 mt-3">
                {{ form(contactForm) }}
            </div>
        </div>

    </main>

    <footer class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-4 my-auto order-md-1 pt-5">
                <ul>
                    <li><a href="#header-img">Haut de page</a></li>
                    <li><a href="#apropos">A propos</a></li>
                    <li><a href="#realisations">Réalisations</a></li>
                    <li><a href="#competences">Compétences</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div>
            <div class="col-sm-12 col-md-6 offset-md-3 col-lg-4 offset-lg-0 my-auto order-md-3 order-lg-2 pt-5">
                <img src="{{ asset('img/logo-white.gif') }}" class="rounded-circle" alt="logo Thierry PRUVOST">
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4 my-auto order-md-2 order-lg-3 pt-5">
                <h3>Thierry PRUVOST</h3>
                <h4>Développeur web et mobile</h4>
                <div class="dropdown-divider mx-4"></div>
                <p>{{ contact_address }}</p>
                <p>{{ contact_zip }}{{contact_city}}</p>
                <p><a href="tel:+33682975971">{{contact_phone}}</a>
                </p>
                <p>
                    <a href="mailto:informatique.app.59@gmail.com">
                        {{contact_email}}
                    </a>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center pt-5">
            <p id="copyright">{{ copyright|raw }}</p>
            </div>
        </div>

    </footer>

    {% endblock %}
   